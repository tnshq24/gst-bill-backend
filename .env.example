# Environment variables template for chatbot avatar backend
# Copy this file to .env and fill in your actual values

# Azure AD service principal (required for Fabric Data Agent)
CLIENT_ID=""
TENANT_ID=""
CLIENT_SECRET=""

# Fabric Data Agent (required)
DATA_AGENT_URL=""




# Cosmos DB (required)
COSMOS_ENDPOINT=""
COSMOS_KEY=""
COSMOS_DATABASE="chatdb"
COSMOS_CONTAINER="messages"

# Application settings
APP_ENV="dev"
APP_PORT=8000
MAX_HISTORY_TURNS=20
REQUEST_TIMEOUT_SECS=60

# RAG settings (optional - set to "none" to disable)
RAG_PROVIDER="none"
AZURE_SEARCH_ENDPOINT="https://your-search-service.search.windows.net"
AZURE_SEARCH_KEY=""
AZURE_SEARCH_INDEX="chat-docs"
RAG_TOP_K=5

# Security settings (comma-separated list, no quotes needed)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
MAX_MESSAGE_LENGTH=4000

# Auth / JWT (optional)
API_CLIENT_ID=""
API_CLIENT_SECRET=""
JWT_SECRET=""
JWT_ISSUER="chatbot-backend"
JWT_AUDIENCE="chatbot-clients"
JWT_EXP_MINUTES=60

# Azure Speech / Avatar token relay (required for /token and /ice-token)
SPEECH_KEY=""
SPEECH_REGION=""
# Optional overrides:
# SPEECH_TOKEN_ENDPOINT=""
# SPEECH_ICE_ENDPOINT=""

# Logging settings
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
